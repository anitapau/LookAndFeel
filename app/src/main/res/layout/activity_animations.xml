<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="anitapau.uw.tacoma.edu.lookandfeel.AnimationsActivity">

    <Button
        android:id="@+id/SPIN"
        style="@style/uw_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/uw_button"
        android:text="SPIN"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="animateSpin"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <Button
        android:id="@+id/MOVE"
        style="@style/uw_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="top"
        android:background="@drawable/uw_button"
        android:text="MOVE"
        android:onClick="animateMove"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/FADE"
        style="@style/uw_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/uw_button"
        android:text="FADE"
        android:onClick="animateFade"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />

    <TextView
        android:id="@+id/animate_me"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="@color/uwPurple"
        android:text="@string/animating"
        android:textColor="@color/uwGold"
        android:onClick="animateTextView"
        android:layout_marginBottom="171dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/MOVE"
        android:layout_alignEnd="@+id/MOVE" />

</RelativeLayout>
